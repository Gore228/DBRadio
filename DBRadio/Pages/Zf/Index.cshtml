@page
@model DBRadio.Pages.Zf.IndexModel
@{
	ViewData["Title"] = "Запросы и филтры";
}
<div class="accordion" id="accordionExample">
	<div class="card">
		<div class="card-header" id="headingOne">
			<h2 class="mb-0">
				<button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
					Запросы
				</button>
			</h2>
		</div>

		<div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
			<div class="card-body">
				<a class="nav-link text-dark" asp-area="" asp-page="/Zf/Zaprosi/Otdelkadrov">Отдел кадров</a>
				<a class="nav-link text-dark" asp-area="" asp-page="/Zf/Zaprosi/MusicArchiev">Музыкальный архив</a>
				<a class="nav-link text-dark" asp-area="" asp-page="/Zf/Zaprosi/SetkaVeshyaniya">Сетка вещания</a>
			</div>
		</div>
	</div>
	<div class="card">
		<div class="card-header" id="headingOne">
			<h2 class="mb-0">
				<button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
					Фильтры
				</button>
			</h2>
		</div>

		<div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
			<div class="card-body">
				<form>
					Отобразить сотрудников с должностью:
					<select asp-items="Model.Dolzhnosti" name="id" class="form-control-sm">
						<option value="-1">Должность не выбрана</option>
					</select>
					<button asp-page="/Zf/Filtri/OtdelkadrovF" class="btn btn-primary">Отфильтровать</button>
				</form>
				<br />
			</div>
			<div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
				<div class="card-body">
					<form>
						Отобразить записи отдельных исполнителей:
						<select asp-items="Model.Zapisi" name="id" class="form-control-sm">
							<option value="-1">Запись не выбрана</option>
						</select>
						<button asp-page="/Zf/Filtri/MusicArchievF" class="btn btn-primary">Отфильтровать</button>
					</form>
					<br />
				</div>
			</div>
			<div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
				<div class="card-body">
					<form>
						Отобразить записи отдельных жанров:
						<select asp-items="Model.Zhanri" name="id" class="form-control-sm">
							<option value="-1">Запись не выбрана</option>
						</select>
						<button asp-page="/Zf/Filtri/MusicArchievZhanriF" class="btn btn-primary">Отфильтровать</button>
					</form>
					<br />
				</div>
			</div>
			<div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
				<div class="card-body">
					<form>
						Отобразить сетки вещания по отдельным датам:
						<select asp-items="Model.Date" name="id" class="form-control-sm">
							<option value="-1">Дата не выбрана</option>
						</select>
						<button asp-page="/Zf/Filtri/SetkaVeshyaniyaDateF" class="btn btn-primary">Отфильтровать</button>
					</form>
					<br />
				</div>
			</div>
			<div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
				<div class="card-body">
					<form>
						Отобразить сетки вещания по отдельным сотрудникам:
						<select asp-items="Model.Sotrudniki" name="id" class="form-control-sm">
							<option value="-1">Сотрудник не выбран</option>
						</select>
						<button asp-page="/Zf/Filtri/SetkaVeshyaniyaSotrudnikiF" class="btn btn-primary">Отфильтровать</button>
					</form>
					<br />
				</div>
			</div>
		</div>
	</div>
  </div>