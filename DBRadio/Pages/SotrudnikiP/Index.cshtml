@page
@model DBRadio.Pages.SotrudnikiP.IndexModel

@{
    ViewData["Title"] = "Таблица сотрудников";
}

<h1>Таблица сотрудников</h1>

<p>
    <a asp-page="Create">Создать новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sotrudniki[0].Staff_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sotrudniki[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sotrudniki[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sotrudniki[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sotrudniki[0].Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sotrudniki[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sotrudniki[0].PassportData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sotrudniki[0].Position_ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sotrudniki) {
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Staff_ID)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.FullName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Age)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Gender)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Adress)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PhoneNumber)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.PassportData)
			</td>
			<td>
				@{
					try
					{
						@Model.Dolzhnosti.First(r => r.ID == item.PositionID).JobTitle
					}
					catch
					{											    
						<p> Данных нет </p>
					}
				}
			</td>
			<td>
				<a asp-page="./Edit" asp-route-id="@item.ID">Редактирование</a> |
				<a asp-page="./Details" asp-route-id="@item.ID">Подробнее</a> |
				<a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
			</td>
		</tr>
}
    </tbody>
</table>
